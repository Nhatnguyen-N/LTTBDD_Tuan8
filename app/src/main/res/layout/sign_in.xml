<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="84dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/group"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="106dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="84dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/group_3"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="46dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="84dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/group_5"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="178dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:drawableRight="@drawable/group__1_"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Type password"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="412dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="330dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="243dp"
        android:layout_height="47dp"
        android:background="@drawable/botron"
        android:text="Sign in"
        app:backgroundTint="#EF77B0"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="474dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:text="Forgot a password"
        android:textAllCaps="true"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="532dp" />
</androidx.constraintlayout.widget.ConstraintLayout>